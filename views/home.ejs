<%- include("./partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
  <div class="post-preview">
    <div class="post-header">
      <h2><%= post.title %></h2>
      <form class="delete-form" action="/delete/<%= post._id %>" method="POST">
        <button type="submit" class="delete-button"><i class="fas fa-trash"></i></button>
      </form>
    </div>
    <% if (post.content.length > 100) { %>
      <p><%= post.content.substring(0, 100) %>... <a href="/posts/<%= post._id %>">See More</a></p>
    <% } else { %>
      <p><%= post.content %> <a href="/posts/<%= post._id %>">See More</a></p>
    <% } %>
  </div>
<% }) %>

<%- include("./partials/footer") %>
